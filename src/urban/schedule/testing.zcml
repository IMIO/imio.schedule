<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="urban.schedule">

  <include package=".tests" />

  <include file="configure.zcml" />

  <genericsetup:registerProfile
      name="testing"
      title="urban.schedule tests"
      directory="profiles/testing"
      description="Steps to ease tests of urban.schedule"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <genericsetup:importStep
      name="urban.schedule-example_install"
      title="urban.schedule testing install import step"
      description="Create example task and task config objects for unit test purpose"
      handler=".tests.setup.schedule_example_install">
  </genericsetup:importStep>

</configure>
